document {
    width: 210mm;
    height: 297mm;

    margin: 3cm 2.5cm;

    font-family: Cambria;
    inline-code-font-family: Consolas;
    font-size: 12pt;
    color: rgb(0.1, 0.1, 0.1);

    line-height: 1.4;
}

page {
    footer: footer;
}

table-cell.footer-table {
    border-width: 0.25mm 0 0 0; // Hide borders of the tables cells, except on the top
    font-size: 11pt;
}

table-cell.footer-table:column(1) {
    text-align: left;
}

table-cell.footer-table:column(*) {
    text-align: right;
}

paragraph {
    first-line-indent: 3mm;
}

code {
	font-family: Consolas;
	line-number-font-family: Consolas;
	font-size: 11pt;
	line-number-font-size: 11pt;
	margin-bottom: 4mm;
}

title {
    font-family: Segoe UI;
    color: #778899;
    font-size: 24pt;
    line-height: 1.0;

    text-align: center;

    margin: 0 0 1.5cm 0;
    padding: 0;
    text-justify: false;
}

subtitle {
    font-family: Cambria;
    color: #666666;
    font-size: 12pt;
    text-align: center;
    margin-left: 1.5cm;
    margin-right: 1.5cm;

    margin-bottom: 2cm;
    text-justify: false;

    border-radius: 2mm;
    border: 1mm dotted #778899;
    padding: 5mm 0 2mm 0;
}

h {
    font-family: Segoe UI;
    font-variant: plain;
    margin: 4mm 0 5mm 0;
    line-height: 1.0;
    text-justify: false;
}

h1 {
    font-size: 24pt;
    border-bottom: 0.5mm solid #EAEAEA;
    margin-bottom: 5mm;
}

h2 {
    font-size: 20pt;
}

h3 {
    font-size: 16pt;
}

toc {
    font-family: Segoe UI;
    line-height: 20pt;
}

references {
    first-line-indent: -5mm;
    padding-left: 5mm;
}

enumeration {
    margin: 0;
    padding: 0;
}
